var $form = $('#edit_answer_<%= @answer.id %>'),
    $alert = $form.find('.alert-danger');

$alert.remove();

<% if @answer.errors.any? %>
  $form.prepend('<%= fix_remotipart { render 'common/errors', resource: @answer } %>');
<% else %>
  $form.closest('.answer').replaceWith('<%= fix_remotipart { render @answer } %>');
<% end %>
