var $form = $('#edit_question_<%= @question.id %>'),
    $alert = $form.find('.alert-danger');

$alert.remove();

<% if @question.errors.any? %>
  $form.prepend('<%= j render 'common/errors', resource: @question %>');
<% else %>
  $form.closest('.question').replaceWith('<%= j render 'questions/question_view' %>');
<% end %>
