.item.question data-question-id="#{@question.id}"
  = render 'common/signature', resource: @question
  .item-content.question-content
    .item-actions
      = render 'votes/vote', resource: @question
    - cache @question do
      h1= @question.title
      .item-body.question-body
        = simple_format(@question.body)
      = render 'common/attachments', resource: @question

  = render 'comments/comments', resource: @question
