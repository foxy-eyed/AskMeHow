<h2><%= "Hello, #{@user.email}!" %></h2>

<p>New questions created yesterday:</p>
<ul>
  <% @questions.each do |question| %>
    <li>
      <%= link_to question.title, question_url(question) %>
      <%= " (#{question.user.email} | #{question.created_at.strftime '%b %-d \'%y at %H:%M'})" %>
    </li>
  <% end %>
</ul>
